{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile sources",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/O2",
                "/Fo:",
                "${workspaceFolder}/bin/intermediates/",
                "/Fe:",
                "${workspaceFolder}/bin/Paint.exe",
                "/std:c++17",
                "${workspaceFolder}/src/Paint.cpp",
                "${workspaceFolder}/src/Screen.cpp",
                "${workspaceFolder}/src/UserInput.cpp",
                "${workspaceFolder}/dependencies/SDL2/lib/x86/SDL2main.lib",
                "${workspaceFolder}/dependencies/SDL2/lib/x86/SDL2.lib",
                "/link",
                "/machine:x86"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}